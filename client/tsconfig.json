{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "esnext",
    "outDir": "dist",
    "jsx": "react",
    "moduleResolution": "Node",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["types", "node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["./node_modules"]
}
